---
import type {Frontmatter} from '../types/index'
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const posts = await Astro.glob<Frontmatter>('../pages/posts/*.md');
console.log(posts[0].url)
---

<Layout title="Welcome to Astro.">
	<main class="my-7">
		<div class="grid gap-8 justify-center grid-flow-dense grid-cols-post">
			{posts.map(({frontmatter, url}) => (
				<Card {...frontmatter} url={url as string} />
			))}
		</div>
	</main>
</Layout>